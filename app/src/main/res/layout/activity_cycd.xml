<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CYCDActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/m_toobar_cycd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30sp"
            android:typeface="normal"
            android:layout_gravity="center"
            android:id="@+id/m_xhcdtv"
            android:text="成语词典"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/m_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.appcompat.widget.SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/m_cycd_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>