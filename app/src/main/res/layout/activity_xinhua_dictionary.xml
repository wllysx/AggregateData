<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".XinhuaDictionaryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/m_toobar_xhcd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30sp"
            android:typeface="normal"
            android:layout_gravity="center"
            android:id="@+id/m_xhcdtv"
            android:text="新华词典"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/m_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.appcompat.widget.SearchView>


    <FrameLayout
        android:id="@+id/m_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
</LinearLayout>